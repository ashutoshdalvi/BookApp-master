<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@drawable/gradient01"

    >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:drawableLeft="@drawable/person"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint=" Name"
        android:inputType="textPersonName"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint=" E-mail Id"
        android:inputType="textPersonName"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint=" Contact no"
        android:inputType="textPersonName"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="18dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/button"
        android:layout_width="212dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text=" Create Account"
        app:cardBackgroundColor="#344692"
        app:cardCornerRadius="20sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="80sp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Sign up"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="91sp"
        android:layout_height="91sp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        app:civ_border="true"
        app:civ_border_width="3sp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="109dp"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/wellfleet"
        android:text="Read-it"
        android:textSize="40sp" />



</RelativeLayout>