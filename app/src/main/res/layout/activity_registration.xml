<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@drawable/gradient01"

    >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:drawableLeft="@drawable/person"
        android:ems="10"
        android:hint=" Name"
        android:fontFamily="@font/aclonica"
        android:inputType="textPersonName"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint=" E-mail Id"
        android:inputType="textPersonName"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint=" Contact no"
        android:inputType="textPersonName"
        android:textSize="22dp" />
    <EditText
        android:id="@+id/editText4"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint=" Password"
        android:inputType="textPersonName"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="281sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint=" Confirm Password"
        android:inputType="textPersonName"
        android:textSize="22dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/button"
        android:layout_width="212dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:onClick="signinconn"
        android:text=" Create Account"
        app:cardBackgroundColor="#17345f"
        app:cardCornerRadius="20sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="80sp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="Sign in"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="91sp"
        android:layout_height="91sp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        app:civ_border="true"
        app:civ_border_width="3sp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-90sp"
        android:fontFamily="@font/aclonica"
        android:text="Read-it"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:fontFamily="@font/aclonica"
        android:lineSpacingExtra="8sp"
        android:text="Sign-in"

        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>