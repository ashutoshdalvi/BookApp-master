<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient01"
    tools:context=".ForgotPassword">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="91sp"
        android:layout_height="91sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        app:civ_border_color="@color/cardview_dark_background"
        app:civ_border_width="1sp"
        app:srcCompat="@drawable/logo"
        />

    <EditText
        android:id="@+id/email0"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:drawableLeft="@drawable/person"
        android:fontFamily="@font/adamina"
        android:hint=" Email Id"
        android:inputType="textEmailAddress"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="168dp"
        android:textSize="20dp"
        android:text="A link will be sent to your email" />


    <android.support.v7.widget.CardView
        android:layout_width="200sp"
        android:layout_height="45sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        app:cardBackgroundColor="#17345f"
        app:cardCornerRadius="20sp"
        android:onClick="sendclick"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Send Email"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>